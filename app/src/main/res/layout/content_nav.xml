<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HelpDeskRed"
    tools:context="test.studenthelpdesk.Work_Orders">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/searchFilter"
        android:background="#07000000"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/white"

        app:srcCompat="@android:drawable/ic_search_category_default"/>


    <ListView

        android:id="@+id/AwareView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:dividerHeight="10.0sp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/searchFilter">


    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="auto"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="@color/HelpDeskRed"

        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/AwareView"
        android:layout_alignRight="@+id/AwareView"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="15dp"/>



</RelativeLayout>
